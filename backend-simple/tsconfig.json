{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}